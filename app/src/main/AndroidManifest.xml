<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cjeon.myapplication">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera"
                  android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/action_bar_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleUIActivity"
            android:label="@string/button_main_1_3" />
        <activity
            android:name=".StartAnotherActivityActivity"
            android:label="@string/title_activity_start_another_activity" />
        <activity
            android:name=".EmptyActivity"
            android:label="@string/title_activity_empty" />
        <activity
            android:name=".OrientationSensitiveActivity"
            android:label="@string/title_activity_orientation_sensitive_layout" />
        <activity
            android:name=".DifferentThemeActivity"
            android:label="@string/title_activity_themes"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".ActivityLifeCycleActivity"
            android:label="@string/title_activity_lifecycle" />
        <activity
            android:name=".ActivityLifeCycleActivity2"
            android:label="@string/title_activity_lifecycle2" />
        <activity
            android:name=".FragmentActivity"
            android:label="@string/title_activity_fragment" />
        <activity
            android:name=".InternalStorageActivity"
            android:label="@string/title_internal_storage" />
        <activity
            android:name=".SQLiteActivity"
            android:label="@string/title_sqlite_database" />
        <activity
            android:name=".ResultActivity"
            android:label="@string/title_result_activity">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity android:name=".CameraActivity"></activity>
    </application>

</manifest>